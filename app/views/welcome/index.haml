.container-xl.mt-5
  %h1.text-center Blog of Blogs

  .container.my-5
    %h2.mb-4 Meet our bloggers
  
    .row.row-cols-3
      - @users.each do |user|
        .col
          = render CardComponent.new(img: 'defaults/avatar.png', title: user.blog_name, text: 'Some quick example text to build on the card title and make up the bulk of the cards content.', href: user_path(user))

  %h2 Check our posts
  - @posts.each do |post|
    %h3= post.title
    %strong= post.user.first_name
    %p= post.body
    = link_to 'Show', user_post_path(post.user.slug, post.slug)

  - if logged_in?
    = link_to 'Log out', logout_path, data: { 'turbo-method': 'delete' }
    = link_to 'My blog', user_path(current_user)
  - else
    = link_to 'Sign up', signup_path
    = link_to 'Log in', login_path
