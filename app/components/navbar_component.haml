%nav.navbar.navbar-expand-lg.navbar-light.bg-light
  .container-md
    = link_to 'Blog of Blogs', root_path, class: 'navbar-brand'
    %button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation")
      %span.navbar-toggler-icon
    #navbarNavDropdown.collapse.navbar-collapse
      %ul.navbar-nav.w-100
        %li.nav-item
          = link_to 'Home', root_path, class: 'nav-link active'
        %li.nav-item
          = link_to 'Users', users_path, class: 'nav-link'
        %li.nav-item
          = link_to 'Posts', posts_path, class: 'nav-link'
        - if logged_in?
          %li.nav-item.ms-auto
            = link_to 'My Blog', user_path(current_user), class: 'nav-link'
          %li.nav-item
            = link_to 'Log out', logout_path, class: 'nav-link', 'data-turbo-method': 'delete'
        - else
          %li.nav-item.ms-auto
            = link_to 'Sign up', signup_path, class: 'nav-link'
          %li.nav-item
            = link_to 'Log in', login_path, class: 'nav-link'
